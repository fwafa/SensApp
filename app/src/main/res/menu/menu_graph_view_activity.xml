<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GraphViewActivity">

    <item
        android:id="@+id/action_settings"
        android:title="@string/settings"
        app:showAsAction="always"
        android:icon="@drawable/ic_sensor">

        <menu>
            <item
                android:id="@+id/action_filter"
                android:title="@string/filter"
                android:checkable="true"
                app:actionViewClass="android.widget.CheckBox"
                app:showAsAction="ifRoom">
            </item>
        </menu>

    </item>

    <item
        android:id="@+id/action_stop"
        android:orderInCategory="100"
        android:title="@string/pause"
        app:showAsAction="always"
        android:icon="@drawable/ic_stop_24dp" />

    <item
        android:id="@+id/action_resume"
        android:orderInCategory="100"
        android:title="@string/resume"
        app:showAsAction="always"
        android:icon="@drawable/ic_play_36dp" />

    <item
        android:id="@+id/action_share"
        android:orderInCategory="100"
        android:title="@string/share"
        app:showAsAction="always"
        android:icon="@drawable/ic_share">

        <menu>

            <item
                android:id="@+id/action_send"
                android:orderInCategory="100"
                android:title="@string/share"
                app:showAsAction="ifRoom|withText"
                android:icon="@drawable/ic_menu_send"/>

            <item
                android:id="@+id/action_save"
                android:orderInCategory="100"
                android:title="@string/save"
                app:showAsAction="ifRoom|withText"
                android:icon="@drawable/ic_save"/>

            <item
                android:id="@+id/action_search"
                android:orderInCategory="100"
                android:title="@string/hosts_suchen"
                app:showAsAction="ifRoom|withText"
                android:icon="@drawable/ic_search_24dp"/>

        </menu>

    </item>



</menu>
